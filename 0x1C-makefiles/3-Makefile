CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm 

all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) -f *~ $(NAME)
oclean:
	$(RM) -f $(OBJ)
fclean:
	$(RM) -f *~ $(NAME)
	$(RM) -f $(OBJ)
re: $(SRC) m.h
	$(RM) -f $(OBJ)
	$(CC) -c -o main.o main.c
	$(CC) -c -o school.o school.c
	$(CC) $(OBJ) -o $(NAME)
